{
  "lock": false,
  "tasks": {
    "check": "deno fmt --check && deno lint && deno check **/*.ts",
    "fix": "deno lint && deno fmt",
    "serve": "deno serve -A server.ts",
    "start": "deno serve -A --watch server.ts"
  },
  "lint": {
    "rules": {
      "tags": [
        "recommended"
      ]
    }
  }
}
